{{#if NOCRIME}}
<h2 style="padding-left:15%"><i>No crimes committed during this period</i></h2>
{{/if}}

{{#if data}}
<center>
    <h2>{{heading}}</h2>
    <table border='1' id="rankings" style="padding-right:25%">
        <thead>
            <tr>
                <td>High school graduate</td>
                <td>bachelors_degree</td>
                <td>native_born_in_united_states</td>
                <td>killedSum</td>
                <td>injuredSum</td>
                <td>candidate</td>
                <td>party</td>
                <td>maxCandidatevotes</td>
                <td>totalvotes</td>
                <td>us_state</td>
                <td>year</td>
            </tr>
        </thead>
        {{#each data}}
        <tr>
            <td>{{this.[0]}}</td>
            <td>{{this.[1]}}</td>
            <td>{{this.[2]}}</td>
            <td>{{this.[3]}}</td>
            <td>{{this.[4]}}</td>
            <td>{{this.[5]}}</td>
            <td>{{this.[6]}}</td>
            <td>{{this.[7]}}</td>
            <td>{{this.[8]}}</td>
            <td>{{this.[9]}}</td>
            <td>{{this.[10]}}</td>
        </tr>
        {{/each}}
    </table>
</center>
{{/if}}
{{#if avg}}
<center>
    <h2>Average across all the states</h2>
    <table border='1' id="rankings" style="padding-right:25%">
        <thead>
            <tr>
                <td>High school graduate</td>
                <td>bachelors_degree</td>
                <td>Foreign born</td>
                <td>native_born_in_united_states</td>
                <td>killed avg</td>
                <td>injured avg</td>
                <td>candidate</td>
                <td>party</td>
                <td>maxCandidatevotes</td>
                <td>totalvotes</td>
                <td>us_state</td>
                <td>year</td>
            </tr>
        </thead>
        {{#each avg}}
        <tr>
            <td>{{this.[0]}}</td>
            <td>{{this.[1]}}</td>
            <td>{{this.[2]}}</td>
            <td>{{this.[3]}}</td>
            <td>{{this.[4]}}</td>
            <td>{{this.[5]}}</td>
            <td>N/A</td>
            <td>N/A</td>
            <td>{{this.[9]}}</td>
            <td>{{this.[10]}}</td>
            <td>{{this.[11]}}</td>
            <td>{{this.[12]}}</td>
        </tr>
        {{/each}}
    </table>
</center>
{{/if}}
